@model IEnumerable<ConsumeWebServices.Models.Product>

@{
    ViewBag.Title = "ClientVue";
    Layout = "~/Views/Shared/_ClientLayout.cshtml";
}



@section testprod {
    <h3> Produits Informatique</h3>

    @foreach (var item in Model)
    {

        <div class="men-thumb-item">

            @{
                if (item.Picture == "Informatique")

                {

                    <div class="col-md-4 product-men">
                        <div class="men-pro-item simpleCart_shelfItem">
                            <div class="men-thumb-item">
                                @{
                                    if (item.NameProduct == "ordinateur protable")
                                    {
                                        <img src="~/ClientStyle/images/pc.jpg" alt="">
                                    }

                                    if (item.NameProduct == "Ordinateur de Bureau")
                                    {
                                        <img src="~/ClientStyle/images/bure.jpg" alt="">
                                    }

                                    if (item.NameProduct == "webcam")
                                    {
                                        <img src="~/ClientStyle/images/webcam.jpg" alt="">
                                    }
                                    if (item.NameProduct == "souris")
                                    {
                                        <img src="~/ClientStyle/images/souris.jpg" alt="">
                                    }
                                }


                                <div class="men-cart-pro">
                                    <div class="inner-men-cart-pro">

  <a href="@Url.Action("ShowSingleProduct", "Product", new { id = item.id})" class="link-product-add-cart">Quick View</a>
                                    </div>
                                </div>
                                <span class="product-new-top">New</span>

                            </div>
                            <div class="item-info-product ">
                                <h4>
                                    <a href="single.html"> @Html.DisplayFor(modelItem => item.NameProduct)</a>

                                </h4>
                                <div class="info-product-price">

                                    <a href="single.html"> @Html.DisplayFor(modelItem => item.priceProduct) DT TTC</a>
                                </div>
                                <div class="A">
                                    <form action="#" method="post">
                                        <fieldset>
                                            <input type="hidden" name="item_name" value=" @Html.DisplayFor(modelItem => item.Description)" />
                                        </fieldset>
                                        <a href="@Url.Action("AffecterProductToBasket", "Product", new { id = item.id})" class="btn btn-info"><i class="fa fa-pencil"></i> Add to Card</a>

                                    </form>
                                </div>

                            </div>
                        </div>
                    </div>

                }

            }
        </div>
    }

    <br />
    <br />
    <br />
    <br />
    <br />



}



