@model finalPidev.Models.Basket
@{
    ViewBag.Title = "AddOrEdit";
}

<div class="form-body">

    @using (Html.BeginForm())
    {
        @Html.HiddenFor(model => model.id)

        <br>
        <br>
        <br>
        <div class="form-group">
            @Html.LabelFor(model => model.nameBasket)
            @Html.EditorFor(model => model.nameBasket)
            @Html.ValidationMessageFor(model => model.nameBasket)
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.user_id)
            @Html.EditorFor(model => model.user_id)
            @Html.ValidationMessageFor(model => model.user_id)
        </div>

        <div class="form-group">
            <input type="submit" value="Submit" class="btn btn-primary" />
            <input type="reset" value="Reset" class="btn button" />
        </div>
    }
</div>

@section scripts{
    @Scripts.Render("~/bundles/jqueryval");
}