@model finalPidev.Models.User

@{
    ViewBag.Title = "updateToUser";
}

<div class="form-body">

    @using (Html.BeginForm())
    {
        @Html.HiddenFor(model => model.idUser)

        <br>
        <br>
        <br>
        <div class="form-group">
            @Html.LabelFor(model => model.firstName)
            @Html.EditorFor(model => model.firstName)
            @Html.ValidationMessageFor(model => model.firstName)
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.lastName)
            @Html.EditorFor(model => model.lastName)
            @Html.ValidationMessageFor(model => model.lastName)
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.telNum)
            @Html.EditorFor(model => model.telNum)
            @Html.ValidationMessageFor(model => model.telNum)
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.address)
            @Html.EditorFor(model => model.address)
            @Html.ValidationMessageFor(model => model.address)
        </div>


        <div class="form-group">
            @Html.LabelFor(model => model.birthdate)
            @Html.EditorFor(model => model.birthdate)
            @Html.ValidationMessageFor(model => model.birthdate)
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.login)
            @Html.EditorFor(model => model.login)
            @Html.ValidationMessageFor(model => model.login)
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.password)
            @Html.EditorFor(model => model.password)
            @Html.ValidationMessageFor(model => model.password)
        </div>




        <div class="form-group">
            <input type="submit" value="Submit" class="btn btn-primary" />
            <input type="reset" value="Reset" class="btn button" />
        </div>
    }
</div>

@section scripts{
    @Scripts.Render("~/bundles/jqueryval");
}